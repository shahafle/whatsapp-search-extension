{
   "manifest_version": 3,
   "name": "Whatsapp search input auto focus",
   "description": "Focus search input when deleting all content from search line",
   "author": "Shahaf Levi",
   "version": "1.0.0",
   "action": {
      "default_popup": "index.html",
      "default_title": "Whatsapp search input auto focus",
      "default_icon": {
         "16": "imgs/icons/icon16.png",
         "32": "imgs/icons/icon32.png"
      }
   },
   "content_scripts": [
      {
         "matches": [
            "*://web.whatsapp.com/*"
         ],
         "js": [
            "content-script.js"
         ],
         "run_at": "document_idle"
      }
   ]
}